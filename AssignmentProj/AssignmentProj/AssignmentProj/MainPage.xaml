<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssignmentProj.MainPage" NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Frame BackgroundColor="#520B00" Padding="24" CornerRadius="0">
            <Label Text="Log In" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry BackgroundColor="Black" x:Name="username" Text="" Placeholder="Enter Username" />
        <StackLayout>
            <Entry BackgroundColor="Black" x:Name="password" Text="" Placeholder="Enter Password" IsPassword="True"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <CheckBox x:Name="saveLogIn"/>
            <Label Text="Keep Me Logged In" TextColor="White"/>
        </StackLayout>
        <Button x:Name="showOrHide" BackgroundColor="#520B00" Text="Show Password" Clicked="showPass" />
        <Label x:Name="error" TextColor="Red"/>
        <Button BackgroundColor="#520B00" Text="Log In" Clicked="goToHomePage" />
        <Button BackgroundColor="#520B00" Text="Sign Up" Clicked="goToSignUp" />

    </StackLayout>

</ContentPage>
