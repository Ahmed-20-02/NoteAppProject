<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssignmentProj.UserSignUp" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout">
            <Frame BackgroundColor = "#520B00" Padding="24" CornerRadius="0">
                <Label Text = "Sign Up" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry BackgroundColor = "Black" Text="" x:Name="name" Placeholder="Enter Your Name"/>
            <Entry BackgroundColor = "Black" Text="" x:Name="username" Placeholder="Enter Username"/>
            <Entry BackgroundColor = "Black" Text="" x:Name="password" Placeholder="Enter Password" IsPassword="True"/>
            <Entry BackgroundColor = "Black" Text="" x:Name="repeatPassword" Placeholder="Enter Password Again" IsPassword="True"/>
            <Label x:Name="error" TextColor="Red"/>
            <Button BackgroundColor = "#520B00" Text="Sign Up" Clicked="signUp"  />
            <Button BackgroundColor = "#520B00" Text="Return To Log In"  Clicked="backToLogIn" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>